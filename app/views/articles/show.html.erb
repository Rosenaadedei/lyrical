<h1><%= @article.title %></h1>
<p><center>
    <b><%= @article.title %></b>
        <br> </br>
       <div align="left"> <%= @article.body %></div>

    <br> </br>

    <%= link_to "Edit", edit_article_path(@article) %>
    <%= link_to "Delete", article_path(@article), method: :delete, confirm: "Are you sure?" %>
    <%= link_to "Back to Articles List", articles_path %>

    <%= link_to "Comment", new_article_comment_path(@article), class: "top-button" %>

    </center></p>

<h3>Comments (<%= @article.comments.size %>)</h3>
<p><%= @article.save %></p>
<%= render partial: 'articles/comment', collection: @article.comments %>
<%= render partial: 'comments/form' %><%= link_to "<< Back to Lyrics List", articles_path %>
<%= link_to "delete", article_path(@article), method: :delete, confirm: "Really delete the piece?" %>
<%= link_to "edit", edit_article_path(@article) %>
